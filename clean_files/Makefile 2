NAME = libft.a

SRC = 	ft_atoi.c \

FLAGS = -Wall -Wextra -Werror

OBJ = 	ft_atoi.o \

all: ${NAME}

${NAME}:
	cc -c ${FLAGS} ${SRC}
	ar rc -s ${NAME} ${OBJ}

clean:
	rm -f ${OBJ}

fclean: clean
	rm -f ${NAME}

re: fclean all

.PHONY: all clean fclean re